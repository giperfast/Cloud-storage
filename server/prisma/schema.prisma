// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int           @id @default(autoincrement())
  username        String        @unique
  password        String
  profile         Profile?
  sessions        Session[]
  files           File[]
}

model Profile {
  id              Int           @id @default(autoincrement())
  avatar          Int?          
  password_date   Int
  user            User          @relation(fields: [userId], references: [id])
  userId          Int           @unique
}

model Session {
  session_id      String        @id @unique
  expiry_date     Int
  user            User          @relation(fields: [userId], references: [id])
  userId          Int           
}

model File {
  file_id         String        @id @unique
  name            String
  extension       String?
  size            Int           
  type            String?        
  user            User          @relation(fields: [userId], references: [id])
  userId          Int     
}
