generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int           @id @default(autoincrement())
  username        String        @unique
  password        String
  profile         Profile?
  sessions        Session[]
  files           File[]
  recycle         DeletedFile[]
}

model Profile {
  id              Int           @id @default(autoincrement())
  avatar          Int?          
  password_date   Int
  user            User          @relation(fields: [userId], references: [id])
  userId          Int           @unique
}

model Session {
  session_id      String        @id @unique
  expiry_date     Int
  user            User          @relation(fields: [userId], references: [id])
  userId          Int           
}

model File {
  id              Int           @id @default(autoincrement())
  file_id         String        @unique
  name            String
  extension       String?
  size            Int           
  type            String    
  path            String?
  date            Int?
  user            User          @relation(fields: [userId], references: [id])
  userId          Int     


  //childs          File?         @relation("childs", fields: [childId], references: [id])
  //childId         Int?
  //Childs          File[]        @relation("childs")
     
  //parent          File?         @relation("parent", fields: [parentId], references: [id])
  //parentId        Int?   
  //Parent          File[]        @relation("parent")

 
}

model DeletedFile {
  id              Int           @id @default(autoincrement())
  file_id         String        @unique
  name            String
  extension       String?
  size            Int           
  type            String?  
  date            Int?    
  expires         Int    
  user            User          @relation(fields: [userId], references: [id])
  userId          Int     
}
